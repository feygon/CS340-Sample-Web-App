<h3>Add new Items:</h3>
<form id="addItem" action="/addItem" method="post">
    Item Name: <input type="text" name="itemName"><br>
    Type: <select name="itemType">
        <option value="farm">Farmed</option>
        <option value="manufactured">Manufactured</option>
        <option value="mined">Mined</option>
    </select><br>
    Volume: <input type="number" step="0.01" name = "itemVol"><br>
    Refinement Level: <select name="itemRefinement"> 
        <option value="0">0</option>
	    <option value="1">1</option>
	    <option value="2">2</option>
	    <option value="3">3</option>
	    <option value="4">4</option>
    </select><br>
    <br>
    <input type="submit" value="Submit">
 </form>
<br/>
