<h3>Add new Items:</h3><br>
<form id="addItem" action="/Serenity/addItem" method="post">
    <div>
        <label>Item Name</label>
        <input type="text" name="itemName">
    </div>
    <div>
        <label>Type</label>
        <select name="itemType">
            <option value="farm">Farmed</option>
            <option value="manufactured">Manufactured</option>
            <option value="mined">Mined</option>
        </select>
    </div>
    <div>
        <label>Volume</label>
        <input type="number" step="0.01" name = "itemVol">
    </div>
    <div>
        <label>Category</label>
        <input type="text" name="category">
    </div>
    <div>
        <label>Refinement Level</label>
        <select name="itemRefinement">
            <option value="0">0</option>
    	    <option value="1">1</option>
    	    <option value="2">2</option>
    	    <option value="3">3</option>
    	    <option value="4">4</option>
        </select>
    </div><br>
    <div>
        <input type="submit" value="Submit">
    </div>
 </form>
<br/>
