<table>
    <thead> 
        <th>Name</th> 
        <th>Type</th> 
        <th>Volume</th>  
        <th>Refinement Level</th>
    </thead>
    <tbody> 
        {{#each items}} 
        <tr> 
            <td class="prodName">{{ItemName}}</td> 
            <td>{{Type}}</td> 
            <td>{{Volume}}</td> 
            <td>{{TechLevel}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script id="componentBoxScript" type="text/x-handlebars-template">
    <select name="componentID" value="componentID">
        {{#each nothing}}
        <option value={{ItemID}}>{{ItemName}}</option>
        {{/each}}
        {{#each items}}
        <option value={{ItemID}}>{{ItemName}}</option>
        {{/each}}
    </select>)
</script>