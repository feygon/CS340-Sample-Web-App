<table>
    <thead> 
        <th>Name</th> 
        <th>Type</th> 
        <th>Volume</th>  
        <th>Category</th>
        <th>Refinement Level</th>
    </thead>
    <tbody> 
        {{#each items}} 
        <tr> 
            <td class="prodName">{{ItemName}}</td> 
            <td>{{Type}}</td> 
            <td>{{Volume}}</td> 
            <td>{{Category}}</td>
            <td>{{TechLevel}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

