<script>
    var expanded = new Array();
    var List__items = {};
    var List__nothing = {};
    var List__components = {};
    var itemIDs = new Array();
    var itemNames = new Array();
    var nothingIDs = new Array();
    var nothingNames = new Array();
    var cmpQty = new Array();
